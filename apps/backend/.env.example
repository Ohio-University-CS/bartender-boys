# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=False

# CORS Configuration
# Comma-separated list of allowed origins, or "*" for all origins
CORS_ORIGINS=*

# MongoDB Configuration
# Full MongoDB connection string with credentials
DB_URI=mongodb://username:password@localhost:27017
# Target database name
DB_NAME=bartender_boys

# ID Scanning Configuration
MAX_IMAGE_SIZE_MB=10

# OpenAI Model Configuration
OPENAI_MODEL=gpt-4o
OPENAI_MAX_TOKENS=500
OPENAI_TEMPERATURE=0.1

# Firmware API Configuration
# URL of the Raspberry Pi controller (e.g., http://192.168.1.50:9000)
FIRMWARE_API_URL=http://your-pi-ip-address:9000
