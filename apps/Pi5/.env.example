# Pi5 firmware service configuration

PI5_API_HOST=0.0.0.0
PI5_API_PORT=9000
PI5_LOG_LEVEL=INFO

# Path to the pump mapping JSON (relative to this folder by default)
PI5_PI_MAPPING_PATH=../backend/config/pi_mapping.json

# Optional shared secret required by /iot/drink and /dispense
# Leave blank to disable auth while testing locally
PI5_FIRMWARE_AUTH_TOKEN=

# Optional heartbeat/telemetry destination on the backend
PI5_BACKEND_HEARTBEAT_URL=
PI5_HEARTBEAT_AUTH_TOKEN=
PI5_HEARTBEAT_INTERVAL_SECONDS=30

# Dispense execution controls
PI5_MAX_PARALLEL_JOBS=1
PI5_DISPENSE_TIMEOUT_SECONDS=300

# Telemetry metadata
PI5_TELEMETRY_DEVICE_ID=brewbot-pi5
